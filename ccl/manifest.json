{
  "manifest_version": 2,
  
  "name": "Concatenate Copy Links",
  "description": "Adds a context menu item when right clicking links to keep appending them to the current clipboard",
  "version": "0.1",
  
  "browser_action": {
    "default_icon": "icon.png",
    "_default_popup": "popup.html",
    "default_title": "Concatenate Copy Links",
  },
  "background_page": "background.html",
  
  "permissions": [
    "contextMenus",
    "clipboardRead",
    "clipboardWrite",
    "https://ajax.googleapis.com/",
  ]
}
